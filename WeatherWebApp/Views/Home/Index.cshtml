@model string

<form asp-controller="Weather" asp-action="GetWeather" method="post">
    <label for="city">Enter City:</label>
    <input type="text" id="city" name="city" required />
    <button type="submit">Get Weather</button>
</form>

<div id="weatherViewModel"></div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(function () {
        $('form').submit(function (event) {
            event.preventDefault();
            var formData = $(this).serialize();
            $.post('/Weather/GetWeather', formData, function (data) {
                $('#weatherViewModel').empty(); // Очистить содержимое элемента
                $('#weatherViewModel').append(data);
            });
        });
    });
</script>